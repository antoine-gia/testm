{% if show_confirmation|default(false) %}
    {% set attr = {'data-confirmation': 'true'} %}
{% endif %}

{{ form_start(form, {attr: attr|default({})}) }}
    {{ form_widget(form) }}

    <button type="submit" class="{{ button_css|default("btn btn-primary") }}">
        <i class="fa fa-save" aria-hidden="true"></i> Enregistrer la catégorie
    </button>

    {% if include_back_to_home_link|default(false) %}
        <a href="{{ path('admin_category_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i>Retour à la liste des catégories
        </a>
    {% endif %}
{{ form_end(form) }}
