{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_catgeory_index' %}

{% block main %}
    <h1>Liste des catégories</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Date d'ajout</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs"
                                                   aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.createdAt|localizeddate('medium', 'short', null, 'UTC') }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_category_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> Ajouter une catégorie
        </a>
    </div>

    {{ parent() }}


{% endblock %}
